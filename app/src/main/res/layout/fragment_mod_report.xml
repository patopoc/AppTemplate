<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fffaedf8"
    android:id="@+id/container_scrollable">

<LinearLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="@string/lbl_status_bar"
        android:textSize="20dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/status_bar_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/status_face"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:id="@+id/lbl_recomendation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/text_container_border"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">
        <TextView
            android:id="@+id/lbl_aspd"
            android:text="@string/lbl_avg_spd"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/txt_aspd_val"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="9999"
            android:textSize="20sp"
            android:gravity="right" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:background="@drawable/text_container_border"
        android:layout_margin="20dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">
        <TextView
            android:id="@+id/lbl_aspw"
            android:text="@string/lbl_avg_spw"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/txt_aspw_val"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="9999"
            android:layout_weight="1"
            android:textSize="20sp"
            android:gravity="right" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:background="@drawable/text_container_border"
        android:layout_margin="20dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">
        <TextView
            android:id="@+id/lbl_aspm"
            android:text="@string/lbl_avg_spm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/txt_aspm_val"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="9999"
            android:layout_weight="1"
            android:textSize="20sp"
            android:gravity="right" />

    </LinearLayout>
    <Button
        android:id="@+id/btn_show_chart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_show_chart"
        android:background="@drawable/btn_shape_selector"
        android:textColor="#fffffbfa"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp" />

    <LinearLayout
            android:id="@+id/char_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_daily"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_daily"
                android:textColor="#fffffbfa"
                android:background="@drawable/btn_shape_selector"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp" />
            <Button
                android:id="@+id/btn_monthly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_monthly"
                android:textColor="#fffffbfa"
                android:background="@drawable/btn_shape_selector"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp" />
            </LinearLayout>
        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/chart"
            android:layout_width="match_parent"
            android:layout_height="300dp"/>
    </LinearLayout>
</LinearLayout>
</ScrollView>